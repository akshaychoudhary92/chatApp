{
    "name": "chat-app",
    "version": "1.0.0",
    "description": "A chat app",
    "main": "app.js",
    "scripts": {
        "build:client": "cross-env WEBPACK_ENV=client webpack --config ./config/webpack",
        "build:prod": "cross-env NODE_ENV=production run-s build:client build:server",
        "build:server": "cross-env WEBPACK_ENV=server webpack --config ./config/webpack",
        "cleanup": "rimraf build app.js",
        "dev": "concurrently -k --names \"NODEMON,SERVER\" -c \"bgBlue,bgGreen\" \"nodemon --config ./config/nodemon.json app.js\" \"npm run build:server -- --watch\"",
        "lint": "run-s -n lint:*",
        "lint:prettier": "prettier --config ./config/.prettierrc \"src/**/*\" --write",
        "lint:tslint": "tslint --project tsconfig.json",
        "start": "cross-env NODE_ENV=production node app.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/akshaychoudhary92/chatApp.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "engines": {
        "node": "8.0.0"
    },
    "bugs": {
        "url": "https://github.com/akshaychoudhary92/chatApp/issues"
    },
    "homepage": "https://github.com/akshaychoudhary92/chatApp#readme",
    "dependencies": {
        "cross-env": "^5.1.3",
        "express": "^4.16.2",
        "morgan": "^1.9.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "socket.io": "^2.0.4",
        "socket.io-client": "^2.0.4"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.40",
        "@babel/preset-env": "^7.0.0-beta.40",
        "@babel/preset-react": "^7.0.0-beta.40",
        "@babel/preset-stage-0": "^7.0.0-beta.40",
        "@chrisaguilar/tslint-config": "^1.4.2",
        "@types/express": "^4.11.1",
        "@types/morgan": "^1.7.35",
        "@types/node": "^9.4.5",
        "@types/react": "^16.0.36",
        "@types/react-dom": "^16.0.3",
        "@types/socket.io": "^1.4.31",
        "@types/socket.io-client": "^1.4.32",
        "babel-loader": "^8.0.0-beta.0",
        "babel-polyfill": "^6.26.0",
        "cache-loader": "^1.2.0",
        "concurrently": "^3.5.1",
        "css-loader": "^0.28.9",
        "extract-text-webpack-plugin": "^3.0.2",
        "fork-ts-checker-webpack-plugin": "^0.3.0",
        "html-webpack-harddisk-plugin": "^0.1.0",
        "html-webpack-plugin": "^2.30.1",
        "html-webpack-template": "^6.1.0",
        "node-sass": "^4.7.2",
        "nodemon": "^1.14.12",
        "npm-run-all": "^4.1.2",
        "postcss-cssnext": "^3.1.0",
        "postcss-loader": "^2.1.0",
        "prettier": "^1.10.2",
        "react-hot-loader": "^4.0.0-beta.22",
        "rimraf": "^2.6.2",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.20.1",
        "thread-loader": "^1.1.2",
        "ts-loader": "^3.5.0",
        "tsconfig-paths-webpack-plugin": "^2.0.0",
        "tslint": "^5.9.1",
        "tslint-language-service": "^0.9.8",
        "typescript": "^2.7.1",
        "uglifyjs-webpack-plugin": "^1.1.8",
        "webpack": "^3.11.0",
